<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--fade in-->
    <alpha
        android:duration="2500"
        android:fromAlpha="0.1"
        android:toAlpha="1"
        />
    <!--fade out-->
    <alpha
        android:startOffset="2500"
        android:duration="3000"
        android:fromAlpha="1.5"
        android:toAlpha="0"
        />

</set>